{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Api": {
    "Host": "localhost",
    "Port": "8001",
    "Protocol": "http"
  },
  "ChatService": {
    "Type": "Api"
  },
  "Authentication": {
    "Schemes": {
      "KeycloakOidc": {
        "Authority": "http://localhost:8080/realms/ragchat",
        "ClientId": "ragchat",
        "CallbackPath": "/signin-oidc",
        "SignedOutCallbackPath": "/signout-callback-oidc",
        "RemoteSignOutPath": "/signout-oidc",
        "SignedOutRedirectUri": "/",
        "Scope": [
          "openid",
          "profile",
          "offline_access",
          "Message.Get"
        ]
      }
    }
  }
}
